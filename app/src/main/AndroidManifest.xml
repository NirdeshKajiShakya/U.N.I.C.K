<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.example.unick">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:name=".UnickApplication"
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.UNICK">
        <activity
            android:name=".view.SettingsActivity"
            android:exported="true"
            android:label="@string/title_activity_settings"
            android:theme="@style/Theme.UNICK" />
        <activity
            android:name=".view.SchoolDetailActivity"
            android:exported="true"
            android:label="@string/title_activity_school_profile"
            android:theme="@style/Theme.UNICK">
        </activity>
        <activity
            android:name=".view.CompareActivity"
            android:exported="true"
            android:label="@string/title_activity_compare"
            android:theme="@style/Theme.UNICK" />
        <activity
            android:name=".view.ResetPasswordActivity"
            android:exported="true"
            android:label="@string/title_activity_reset_password"
            android:theme="@style/Theme.UNICK" />
        <activity
            android:name=".view.CodeConfirmActivity"
            android:exported="true"
            android:label="@string/title_activity_code_confirm"
            android:theme="@style/Theme.UNICK" />
        <activity
            android:name=".view.SendCodeToEmailActivity"
            android:exported="true"
            android:label="@string/title_activity_send_code_to_email"
            android:theme="@style/Theme.UNICK" />
        <activity
            android:name=".view.StudentApplicationActivity"
            android:exported="true"
            android:label="@string/title_activity_student_application"
            android:theme="@style/Theme.UNICK" />

        <activity
            android:name=".view.UserRegistrationActivity"
            android:exported="false"
            android:label="@string/title_activity_user_registration"
            android:theme="@style/Theme.UNICK" />
        <activity
            android:name=".view.UserLoginActivity"
            android:exported="false"
            android:label="@string/title_activity_user_login"
            android:theme="@style/Theme.UNICK" />
        <activity
            android:name=".view.AdminLoginActivity"
            android:exported="false"
            android:label="@string/title_activity_admin_login"
            android:theme="@style/Theme.UNICK" /> <!-- Main / launcher activity -->
        <activity
            android:name=".MainActivity"
            android:exported="true"
            android:label="@string/app_name"
            android:theme="@style/Theme.UNICK">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>